<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">

        <title>FlixTube: Advertise</title>

        <link rel="stylesheet" href="css/tailwind.min.css">
        <link rel="stylesheet" href="css/app.css">
    </head>
    <body>
        <div class="flex flex-col">
            <div class="border-b-2 bg-gray-100">
                <div class="nav flex flex-row items-center mt-1 p-2">
                    <div class="text-xl font-bold">
                        FlixTube
                    </div>
                    <div class="ml-16">
                        <a href="/">Videos</a>
                    </div>
                    <div class="ml-4">
                        <a href="/upload">Upload</a>
                    </div>
                    <div class="ml-4">
                        <a href="/history">History</a>
                    </div>
                    <div class="ml-4 border-b-2 border-blue-600">
                        <a href="/advertise">Advertise</a>
                    </div>
                </div>
            </div>

            <div class="m-4">
                <h1>Our Partners</h1>
                <div class="m-4 flex flex-row flex-wrap">
                    {{#each ads}}
                        <div class="m-2 p-4 border rounded shadow" style="width: 300px;">
                            <a href="{{this.url}}" target="_blank" rel="noopener noreferrer">
                                <img src="{{this.image}}" alt="{{this.name}}" style="width: 100%; height: auto;">
                                <div class="mt-2 text-center">
                                    <h3 class="text-lg font-semibold">{{this.name}}</h3>
                                    <p class="text-sm text-gray-500">{{this.url}}</p>
                                </div>
                            </a>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </body>
</html>
